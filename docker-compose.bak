version: "3.9"

services:
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    ports:
      - 80:80
    networks:
      - frontend

  backend:
    build: 
      context: ./backend
      dockerfile: Dockerfile
    ports:
      - 5000:5000
      - 7002:7002
    env_file:
      - ./backend/.env.production
    depends_on:
      - mongodb
    networks:
      - frontend
      - backend

  mongodb:
    image: mongo:latest
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: rootpassword
    ports:
      - 27217:27017
    volumes:
      - mongodb_data:/data/db
    networks:
      - backend

  machinesim:
    build:
      context: ./machine-sim
      dockerfile: Dockerfile
    depends_on:
      - backend
    networks:
      - backend

volumes:
  mongodb_data:
    external: false

networks:
  frontend:
    driver: bridge
  backend:
    driver: bridge